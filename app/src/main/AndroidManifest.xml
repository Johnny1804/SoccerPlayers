<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.soccerplayers">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_barcelona"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_barcelona_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name=".activities.WebActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.HistoryActivity"/>
        <activity android:name=".activities.MoreInfoActivity" />
        <activity android:name=".activities.PlayerActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>